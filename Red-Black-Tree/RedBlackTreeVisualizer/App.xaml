<Application x:Class="RedBlackTreeVisualizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RedBlackTreeVisualizer.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <local:MainViewModel x:Key="MainData"/>
        <local:SearchViewModel x:Key="SearchData"/>

        <SolidColorBrush x:Key="ButtonBackgroungBrush" Color="#e4edf2"/>
        <SolidColorBrush x:Key="GeneralBackgroundBrush" Color="#4CFFE7"/>
        <SolidColorBrush x:Key="InfoBackgroungBrush" Color="#e4edf2"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="Red"/>
        <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#ffffff"/>
        <SolidColorBrush x:Key="GridSplitterBackgroundBrush" Color="#d3e4ed"/>

        <SolidColorBrush x:Key="TextBlockForegroundBrush" Color="#000000"/>
    </Application.Resources>
</Application>
